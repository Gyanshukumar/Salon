@model IEnumerable<Salon_and_Spa.Book>

@{
    ViewBag.Title = "Upcoming Appointment";
}

<h2>Today Booking</h2>

<p>
    @Html.ActionLink("Upcoming Booking","UpcomingBooking")
</p>
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.General_User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salon_Owner.Name_Of_The_Salon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        @{ 
            DateTime Date = Convert.ToDateTime(item.Date);
            if (Date == DateTime.Today && User.Identity.Name == item.Salon_Owner.EmailId)
            {

        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.General_User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salon_Owner.Name_Of_The_Salon)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            
        </td>
                }
            }
    </tr>
}

</table>
<div>
    @Html.ActionLink("History","History")
</div>
